<% if charity_signed_in? %>
  <h2>My Profile</h2>
  <%= link_to "Edit profile", edit_charity_registration_path(@charity) %>
<% else %>
  <h2><%= @charity.organisation %></h2>
<% end %>

<div class="charity_profile">
  <br /><br />
  <%= @charity.logo %><br>
  <%= @charity.organisation %><br>
  <%= @charity.description %><br>
  <%= link_to "Visit the website", @charity.website_url %><br><br>
  Contact info:
  <ul>
    <li><%= @charity.contact_name %></li>
    <li><%= @charity.email %></li>
    <li><%= @charity.full_address %></li>
    <li><%= @charity.postcode %></li>
  </ul>
  Food accepted:<br />
  <% @charity.requirements_array.each do |k, v| %>
  <li><%= k[:label] %></li>
  <% end %>
  <br />
  Opening hours:<br />
  Weekdays: <%= @charity.weekday_opening_hours %><br />
  Weekends: <%= @charity.weekend_opening_hours %>
</div>
