<div class="charity-profile row">
  <div class="small-12 medium-6 large-3 columns">
    <div class="row">
      <%= cl_image_tag @charity.logo.path, { width: 200, height: 200, crop: :thumb} %>
    </div>
  </div>
  <div class="small-12 medium-6 large-3 columns">
    <div class="row">
      <h2><%= @charity.organisation %></h2>
    </div>
    <div class="row">
      <%= @charity.description %>
    </div>
    <% if @charity.website_url %>
    <div class="row">
    <%= link_to "Visit the website", @charity.website_url %>
    </div>
    <% end %>
  </div>
  <div class="small-12 medium-6 large-3 columns">
    <div class="row">
      <h3>Contact info:</h3>
      <ul class="no-bullet">
        <li><%= @charity.contact_name %></li>
        <li><a href="mailto:<%= @charity.email %>">Email Us</a></li>
        <li><%= @charity.full_address %></li>
        <li><%= @charity.postcode %></li>
      </ul>
    </div>
  </div>
  <div class="small-12 medium-6 large-3 columns">
    <div class="row">
      <h3>Food accepted:</h3>
      <ul class="no-bullet">
        <% if @charity.requirements_array.empty? %>
          <li>We are currently not accepting donations</li>
        <% else %>
          <% @charity.requirements_array.each do |key, value| %>
            <li><%= image_tag "icons/#{key[:heading]}.svg", size: "40x40"%><%= key[:label] %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
    <div class="row">
      <h3>Opening hours:</h3>
      <p><strong>Weekdays:</strong> <%= @charity.weekday_opening_hours %></p>
      <p><strong>Weekends:</strong> <%= @charity.weekend_opening_hours %></p>
    </div>
  </div>
</div>
