<div class="row">
  <% if charity_signed_in? && @current_charity.id == @charity.id %>
    <div class="columns small-6">
      <h2><%= t('oodls.ui.my_profile') %> <%= @charity.organisation %></h2>
    </div>
    <div class="columns small-6 text-right">
      <%= link_to [t('oodls.ui.back_to'), t('oodls.ui.all_charities')].join(' '), charities_path, class: 'button small' %>
      <%= link_to [t('oodls.ui.edit'), t('oodls.ui.profile')].join(' '), edit_charity_registration_path(@charity), class: 'button small' %>
      <%= link_to [t('oodls.ui.delete'), t('oodls.ui.profile')].join(' '), registration_path(@charity), data: { confirm: t('oodls.ui.confirmation') }, method: :delete, class: 'button alert small' %>
    </div>
  <% else %>
    <div class="columns small-6">
      <h2><%= @charity.organisation %></h2>
    </div>
    <div class="columns small-6 text-right">
      <%= link_to [t('oodls.ui.back_to'), t('oodls.ui.all_charities')].join(' '), charities_path, class: 'button small' %>
    </div>
  <% end %>
</div>