<h2>Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :organisation %><br />
    <%= f.text_field :organisation, autofocus: true %>
  </div> 

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :website_url %><br />
    <%= f.text_field :website_url %>
  </div>

  <div class="field">
    <%= f.label :logo %><br />
    <%= f.file_field :logo %><br />
  </div>

  <div class="field">
    <%= f.label :contact_name %><br />
    <%= f.text_field :contact_name %>
  </div> 

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :full_address %><br />
    <%= f.text_field :full_address %>
  </div>

  <div class="field">
    <%= f.label :postcode %><br />
    <%= f.text_field :postcode %>
  </div>  <br />

  <div class="field">
    <%= f.label :requirements %><br />
    <%= f.check_box(:tins) %>
    <%= f.label(:tins, "Tins") %><br />
    <%= f.check_box(:dried_goods) %>
    <%= f.label(:dried_goods, "Dried goods") %><br />
    <%= f.check_box(:coffee_and_tea) %>
    <%= f.label(:coffee_and_tea, "Coffee/Tea") %><br />
    <%= f.check_box(:fresh_fruit_and_veg) %>
    <%= f.label(:fresh_fruit_and_veg, "Fresh Fruit & Veg") %><br />
    <%= f.check_box(:fresh_meat_and_fish) %>
    <%= f.label(:fresh_meat_and_fish, "Fresh Meat & Fish") %><br />
    <%= f.check_box(:snacks) %>
    <%= f.label(:snacks, "Snacks") %><br />
    <%= f.check_box(:jars_and_condiments) %>
    <%= f.label(:jars_and_condiments, "Jars & Condiments") %><br />
    <%= f.check_box(:cereals) %>
    <%= f.label(:cereals, "Cereals") %><br />
    <%= f.check_box(:cooking_ingredients) %>
    <%= f.label(:cooking_ingredients, "Cooking Ingredients") %><br />
    <%= f.check_box(:drinks) %>
    <%= f.label(:drinks, "Drinks") %><br />
    <%= f.check_box(:uht_milk) %>
    <%= f.label(:uht_milk, "UHT-Milk") %>
  </div><br />

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign Up" %>
  </div>
<% end %>

<%= render "charities/shared/links" %>
