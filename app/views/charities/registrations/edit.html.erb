<h2>Edit <%= resource_name.to_s.humanize %> Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :organisation %><br />
    <%= f.text_field :organisation, autofocus: true  %>
  </div> 

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :contact_name %><br />
    <%= f.text_field :contact_name %>
  </div>

  <div class="field">
    <%= f.label :full_address %><br />
    <%= f.text_field :full_address %>
  </div>

  <div class="field">
    <%= f.label :postcode %><br />
    <%= f.text_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email%>
  </div><br />

  Requirements
  <div class="field">
    <%= f.check_box(:tins) %>
    <%= f.label(:tins, "Tins") %><br />
    <%= f.check_box(:dried_goods) %>
    <%= f.label(:dried_goods, "Dried goods") %><br />
    <%= f.check_box(:coffee_and_tea) %>
    <%= f.label(:coffee_and_tea, "Coffee/Tea") %><br />
    <%= f.check_box(:fresh_fruit_and_veg) %>
    <%= f.label(:fresh_fruit_and_veg, "Fresh Fruit & Veg") %><br />
    <%= f.check_box(:fresh_meat_and_fish) %>
    <%= f.label(:fresh_meat_and_fish, "Fresh Meat & Fish") %><br />
    <%= f.check_box(:snacks) %>
    <%= f.label(:snacks, "Snacks") %><br />
    <%= f.check_box(:jars_and_condiments) %>
    <%= f.label(:jars_and_condiments, "Jars & Condiments") %><br />
    <%= f.check_box(:cereals) %>
    <%= f.label(:cereals, "Cereals") %><br />
    <%= f.check_box(:cooking_ingredients) %>
    <%= f.label(:cooking_ingredients, "Cooking Ingredients") %><br />
    <%= f.check_box(:drinks) %>
    <%= f.label(:drinks, "Drinks") %><br />
    <%= f.check_box(:uht_milk) %>
    <%= f.label(:uht_milk, "UHT-Milk") %>
  </div><br />

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p><%= button_to "Remove Charity", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", charity_path %>
