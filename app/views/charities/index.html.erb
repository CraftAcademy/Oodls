<h2>All Charities</h2>
  <% @charities.each do |charity| %>
  <div class="all_charities">
    <%= charity.logo %><br>
    <%= charity.organisation %><br>
    <%= charity.description %><br><br>
    <% if charity.website_url %>
    <%= link_to "Visit the website", charity.website_url %><br><br>
    <% end %>
    Contact info:
    <ul>
      <li><%= charity.contact_name %></li>
      <li><%= charity.email %></li>
      <li><%= charity.full_address %></li>
      <li><%= charity.postcode %></li>
    </ul>
    Food accepted:<br />
    <% charity.requirements_array.each do |k, v| %>
      <li><%= k[:label] %></li>
    <% end %>
  </div>
<% end %>
