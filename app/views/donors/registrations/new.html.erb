<div class="row">
  <div class="small-12 columns">
    <h2><%= t('oodls.devise-ui.sign_up') %></h2>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="small-12 columns">
      <div class="field">
        <%= f.text_field :firstname, autofocus: true, placeholder: t('oodls.devise-ui.donor.firstname') %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <div class="field">
        <%= f.text_field :surname, placeholder: t('oodls.devise-ui.donor.surname') %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: t('oodls.ui.registrations.email') %>
      </div>
    </div>
  </div>
  <div class ="row">
    <div class="small-12 columns">
      <h4><%= t('oodls.ui.registrations.password') %></h4>
      <% if @validatable %>
      <em><%= [@minimum_password_length, t('oodls.ui.registrations.characters_minimum')].join(' ') %></em>
      <% end %>
    </div>
  </div>
  <div class ="row">
    <div class="small-12 columns">
        <%= f.password_field :password, autocomplete: "off", placeholder: t('oodls.ui.registrations.password') %>
    </div>
  </div>
  <div class ="row">
    <div class="small-12 columns">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t('oodls.ui.registrations.password_cofirm') %>
    </div>
  </div>
  <div class ="row">
    <div class="small-12 columns">
      <%= f.submit t('oodls.devise-ui.sign_up'), class: "button small" %>
    </div>
  </div>
<% end %>
