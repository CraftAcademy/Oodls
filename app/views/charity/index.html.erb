
<% if charity_signed_in? %>
	<h2>My Profile</h2>
	<% if @current_charity != nil %>
	<div class="charity_profile">
		<%= link_to "Edit profile", edit_charity_registration_path(@current_charity) %><br /><br />
			<%= @current_charity.logo %><br>
			<%= @current_charity.organisation %><br>
			<%= @current_charity.description %><br>
			<%= link_to "Visit the website", @current_charity.website_url %><br><br>
			Contact info:
			<ul>
				<li><%= @current_charity.contact_name %></li>
				<li><%= @current_charity.email %></li>
				<li><%= @current_charity.full_address %></li>
				<li><%= @current_charity.postcode %></li>
			</ul>
		Food accepted:<br />
		<% @current_charity.requirements_array.each do |k, v| %>
			<li><%= k[:label] %></li>
		<% end %>
	</div>
	<% end %>

<% else %>

	<div class="charity_login">
		<%= link_to "Sign Up", new_charity_registration_path %>
		<%= link_to "Sign In", new_charity_session_path %>
	</div>

	<h2>All Charities</h2>
	<% @charities.each do |charity| %>
		<div class="all_charities">
			<%= charity.logo %><br>
			<%= charity.organisation %><br>
			<%= charity.description %><br><br>
			<% if charity.website_url %>
			<%= link_to "Visit the website", charity.website_url %><br><br>
			<% end %>
			Contact info:
			<ul>
				<li><%= charity.contact_name %></li>
				<li><%= charity.email %></li>
				<li><%= charity.full_address %></li>
				<li><%= charity.postcode %></li>
			</ul>
			Food accepted:<br />
			<% charity.requirements_array.each do |k, v| %>
				<li><%= k[:label] %></li>
			<% end %>
		</div>
		<br />
	<% end %>

<% end %>
